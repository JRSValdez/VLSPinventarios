<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:text="VLSP Inventaios"
            android:textSize="20dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/imgShow"
            android:src="@drawable/editarprod"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <EditText
            android:id="@+id/imgEmpresa"
            android:hint=" Buscar Imagen desde dispositivo"
            android:layout_width="match_parent"
            android:background="@drawable/inputedit"
            android:layout_height="wrap_content" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />


        <EditText
            android:id="@+id/txtPnombre"
            android:hint=" Nombre del producto"
            android:layout_width="match_parent"
            android:background="@drawable/inputedit"
            android:layout_height="wrap_content" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <EditText
            android:id="@+id/txtPid"
            android:hint=" ID automÃ¡tico o manual"
            android:layout_width="match_parent"
            android:background="@drawable/inputedit"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/spnCat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </Spinner>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <EditText
            android:id="@+id/txtCant"
            android:hint=" Cantidad"
            android:background="@drawable/inputedit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <EditText
            android:id="@+id/txtPcosto"
            android:hint="Costo"
            android:background="@drawable/inputedit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <EditText
            android:id="@+id/txtPprecio"
            android:hint="Precio de venta"
            android:background="@drawable/inputedit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <EditText
            android:id="@+id/txtPvence"
            android:hint="Fecha de vencimiento"
            android:background="@drawable/inputedit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <Button
            android:id="@+id/btnAggP"
            android:text="Editar Producto"
            android:background="@drawable/btn_fondo_color_crearcuenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</ScrollView>