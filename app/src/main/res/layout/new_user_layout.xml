<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:padding="20dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Crea un usuario para administrar tu empresa"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:src="@mipmap/ic_launcher"
                android:layout_gravity="center_horizontal"
                android:padding="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <EditText
                android:id="@+id/txtNombre"
                android:hint=" Nombre"
                android:background="@drawable/inputedit"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <EditText
                android:id="@+id/txtApellido"
                android:hint=" Apellido"
                android:layout_width="match_parent"
                android:background="@drawable/inputedit"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_height="wrap_content" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />


            <EditText
                android:id="@+id/txtEmail"
                android:hint=" Correo Electrónico"
                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:background="@drawable/inputedit"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_height="wrap_content" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />


            <EditText
                android:id="@+id/txtUser"
                android:hint=" Usuario"
                android:layout_width="match_parent"
                android:background="@drawable/inputedit"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_height="wrap_content" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />


            <EditText
                android:id="@+id/txtPass1"
                android:hint=" Contraseña"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:background="@drawable/inputedit"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_height="wrap_content" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />


            <EditText
                android:id="@+id/txtPass2"
                android:hint=" Contraseña"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:background="@drawable/inputedit"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_height="wrap_content" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <Button
                android:id="@+id/btnNewUser"
                android:onClick="registarEmpresaUsuario"
                android:text="Crear usuario"
                android:background="@drawable/btn_fondo_color_crearcuenta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>