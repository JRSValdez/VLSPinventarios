<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Reportes">

    <!-- TODO: Update blank fragment layout -->
   <LinearLayout
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Reportes"
           android:gravity="center_horizontal"
           android:textSize="30dp"
           android:textStyle="bold"/>


       <ImageView
           android:layout_height="130dp"
           android:layout_gravity="center"
           android:src="@drawable/reportes"
           android:layout_width="150dp">

       </ImageView>

       <Space
           android:layout_width="match_parent"
           android:layout_height="20dp" />


       <Button
           android:id="@+id/btnReporteInv"
           android:text="Reporte Inventario"
           android:layout_width="match_parent"
           android:background="@drawable/btn_fondo_color_crearcuenta"
           android:layout_height="wrap_content" />

       <Space
           android:layout_width="match_parent"
           android:layout_height="20dp" />

       <Button
           android:id="@+id/btnReporteVentas"
           android:text="Reporte de Ventas realizadas"
           android:layout_width="match_parent"
           android:background="@drawable/btn_fondo_color_crearcuenta"
           android:layout_height="wrap_content" />
       <Space
           android:layout_width="match_parent"
           android:layout_height="20dp" />

       <Button
           android:id="@+id/btnReporteCompras"
           android:text="Reporte de Compras realizadas"
           android:background="@drawable/btn_fondo_color_crearcuenta"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" />


   </LinearLayout>

</FrameLayout>